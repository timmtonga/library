<p style= "text-align: center;">
	<font size= "5"><b>Overdue Items </b></font>
</p>

<div class= "fixed" style = "height: 460px; width:1000px; position: relative;left:30px; top: -10px">
	<table id= "overdue" class= "sortable" border="1" cell-padding = "5px" width= "950px">
		<caption> <h4> Overdue Items as at <%= Time.now.to_date.to_s(:long) %> </h4> </caption>
		<tr><th>Item Title<th>Classmark<th>Date Borrowed<th>Borrower</th></tr>
		<% @items.each do |overdue| %>
		<tr><td><%= overdue.book.title %><td> <%= overdue.book.classmark %><td> <%= overdue.borrow_date %><td><%= overdue.employee.fullname %></td></tr>
		<% end %>
	</table>
</div>
<p>

	<button class= "but1" style="position:relative; left:700px" onclick= "printDiv('overdue')">Print </button> <span class= "tab1"></span>
	<button class= "but1" style="position:relative; left:740px" onClick="javascript:location='/main/tools'">Back </button>
</p>

