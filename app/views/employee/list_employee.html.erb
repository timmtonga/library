		<tr >
			<th width = "250px">First Name <th width = "250px">Surname <th width = "250px">Department</th>
			<% @employees.each do |emp| %>
				<tr><td class= "new"> <%= emp.fname%><td><%= emp.lname %> <td> <%= emp.dept %> </td></tr>
			<% end %>
		
		
	</table>	

</div>
<p style = "position: absolute; left: 0px; top: 510px; align: center" >
	<button class="but1" onClick ="javascript:location= '/main/employees'" style = "position: relative; left: 30px">Back</button>

</p>
